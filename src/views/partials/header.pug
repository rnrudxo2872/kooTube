header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            li 
                a(href="/").header__btn Home
            if loggedIn
                li 
                    a(href="/videos/upload") 비디오 업로드
                li
                    a(href="/users/edit") 정보 수정
                li
                    a(href="/users/logout") 로그아웃
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarURL === ""
                            span 🙄
                        else
                            if loggedInUser.avatarURL && loggedInUser.avatarURL.includes("github")
                                img.header__avatar(src=`${loggedInUser.avatarURL}`, alt="My Profile")
                            else
                                img.header__avatar(src=`${loggedInUser.avatarURL}`, alt="My Profile")
            else
                li
                    a(href="/join").header__btn 회원가입 
                li
                    a(href="/login").header__btn 로그인