extends partials/base.pug

block content
    h4 Change Title of video
    form(method="post") 
        input(name="title", type="text", placeholder="Video Title", value=`${video.title}`, required)
        input(name="description" type="text" placeholder="Insert Description", minlength=20, value=`${video.description}`, required) 
        input(name="hashtags" type="text" placeholder="해시태크는 쉼표(,)로 나눠주세요.", style="width: 300px;", value=`${video.hashtags.join(',')}`, required) 
        input(type="submit", value="Save")